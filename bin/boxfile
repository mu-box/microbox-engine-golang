#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/microbox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/golang.sh

if [ -z "$(nos_payload "config_package")" ]; then
	>&2 echo
	>&2 echo ":::::::::::::::::::::::::::::::::::::::::::::::::::::::: INVALID BOXFILE.YML !!!"
	>&2 echo
	>&2 echo "This engine requires 'package' to be set in run.config's config section."
	>&2 echo
	>&2 echo "Example:"
	>&2 echo ""
	>&2 echo "run.config:"
	>&2 echo "  engine.config:"
	>&2 echo "    package: github.com/mu-box/microbox"
	>&2 echo
	>&2 echo "::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::"
	>&2 echo
	exit 1
fi

cat <<-END
run.config:
  cwd: $(package_path)
  cache_dirs:
    - .gopath
  extra_path_dirs:
    - $(nos_code_dir)/.gopath/bin
END

exit 0
